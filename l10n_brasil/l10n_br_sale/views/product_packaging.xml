<odoo>
    <record id="view_stock_package_weight" model="ir.ui.view">
        <field name="name">view_stock_package_weight</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="delivery.product_packaging_delivery_form"/>
        <field name="arch" type="xml">
            <field name="shipper_package_code" position="after">
                <label for="package_weight"/>
                <div class="o_row" name="package_weight">
                    <field name="package_weight"/>
                    <span><field name="weight_uom_name"/></span>
                </div>
            </field>
        </field>
    </record>
</odoo>
